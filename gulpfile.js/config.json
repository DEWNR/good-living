{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "javascripts",
      "dest": "js",
      "files": [
          {
              "source": [
                  "./src/javascripts/prepare.js"
              ],
              "filename": "prepare.js"
          },
          {
              "source": [
                  "./src/javascripts/enhance.js"
              ],
              "filename": "enhance.js"
          },
          {
            "source": [
                "./src/javascripts/home.js"
            ],
            "filename": "main.js"
          }
      ],
      "extensions": ["js"]
    },

    "css": {
      "src": "stylesheets",
      "dest": "css",
      "sass": {
        "indentedSyntax": false,
        "includePaths": ["./node_modules"]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "partialData": ["html", "json"],
      "dataFiles": ["./src/static/data/*.json"],
      "templatePaths": ["./src/html"],
      "templateFiles": ["./src/html/**/*.nunjucks", "!**/{layouts,shared,macros,data}/**"],
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["nunjucks", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    },

    "production": {
      "rev": true
    }
  }
}
